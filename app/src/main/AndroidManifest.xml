<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nutrition">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_savor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_savor_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutrition">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity android:name=".Authentication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NewAccount"></activity>
        <activity android:name=".Spoonacular"></activity>
        <activity android:name=".SavedRecipes"></activity>
        <activity android:name=".eachRecipe"></activity>
        <activity android:name=".ShoppingList"></activity>
        <activity android:name=".ReviewProfile"></activity>
        <activity android:name=".Preferences"></activity>
        <activity android:name=".MacroTracker"></activity>
    </application>

</manifest>